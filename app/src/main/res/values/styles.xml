<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CalculatorTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/calculator_accent_color</item>
        <item name="colorPrimaryDark">@color/calculator_accent_color</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DisplayEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">bottom|end</item>
    </style>

    <style name="PadButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/pad_button_background</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/pad_button_text_color</item>
    </style>

    <style name="PadLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
